# 本地开发环境：本地启动所有项目（前端、后端、APP）时使用，不依赖外部环境
NODE_ENV=development

VITE_DEV=true

# Node/Java 模式统一走 Vite 代理（后端已统一 /api 前缀，代理透传不 strip）
VITE_BASE_URL=''

# 文件上传类型：server - 后端上传， client - 前端直连上传，仅支持 S3 服务
VITE_UPLOAD_TYPE=server

# 接口地址 - 统一为 /api
VITE_API_URL=/api

# 是否删除debugger
VITE_DROP_DEBUGGER=false

# 是否删除console.log
VITE_DROP_CONSOLE=false

# 是否sourcemap
VITE_SOURCEMAP=false

# 打包路径
VITE_BASE_PATH=/

# 商城H5会员端域名
VITE_MALL_H5_DOMAIN='http://localhost:3000'

# 验证码的开关
VITE_APP_CAPTCHA_ENABLE=false

# GoView域名
VITE_GOVIEW_URL='http://127.0.0.1:3000'
# 端口号（使用非特权端口避免权限问题）
VITE_PORT=5173

# 是否自动打开浏览器
VITE_OPEN=true

# ========== 运行模式配置 ==========
# 【模式1】跳过登录验证（仅开发调试用）- 当前启用
# VITE_SKIP_AUTH=true
# VITE_EXTERNAL_TOKEN_LOGIN=false

# 【模式2】嵌入式生产（外部系统传递 token）
VITE_SKIP_AUTH=false
VITE_EXTERNAL_TOKEN_LOGIN=true

# 【模式3】独立部署生产（标准登录）
# VITE_SKIP_AUTH=false
# VITE_EXTERNAL_TOKEN_LOGIN=false

# ========== 后端类型配置 ==========
# 后端类型：java | node（Java 使用 /sjrh/permission/getPermission，Node 使用 /system/auth/get-permission-info）
VITE_BACKEND_TYPE=java

# ========== 测试链接 ==========
# token 测试: http://192.168.2.169:5173/training/performance?token=xxx

# 使用 Mock 数据 (开发调试 true), 使用 Java 后端 (联调/生产 false)
VITE_USE_MOCK=false

# Java 后端地址（Java 后端统一 /api 前缀，直连模式代码自动追加 /api）
# VITE_JAVA_API_URL=http://192.168.20.199:8081
# VITE_JAVA_API_URL=http://192.168.2.140:8080
VITE_JAVA_API_URL=http://localhost:8081 # 本地测试使用 Node 后端（Docker Java 占用了 8080）

# 同域部署（Nginx 反向代理）
VITE_USE_PROXY=false # 本地开发使用 false（直连模式，javaService 自动追加 /api）

#WebSocket 中间件地址
VITE_WS_URL=ws://localhost:3001 # 本地测试使用 localhost:3001
# VITE_WS_URL=ws://192.168.2.170:3001 # 开发模式下 使用本机ip地址，可以测试其它电脑设备链接测试协同编辑是否正常。
